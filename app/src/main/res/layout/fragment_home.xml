<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/irish_grover"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="#123456"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="124dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/irish_grover"
        android:text="BalancedDiet"
        android:textAlignment="center"
        android:textColor="#123456"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/balanceddiet"
        app:layout_constraintStart_toStartOf="@+id/balanceddiet"
        app:layout_constraintTop_toBottomOf="@+id/balanceddiet" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/balanceddiet"
        android:layout_width="79dp"
        android:layout_height="71dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="84dp"
        android:background="#BC757575"
        android:elevation="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/balanceddiet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/moodtracker"
        android:layout_width="79dp"
        android:layout_height="71dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="68dp"
        android:background="#BC757575"
        android:elevation="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/moodtrack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/healthTip"
        android:layout_width="79dp"
        android:layout_height="71dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="64dp"
        android:background="#BC757575"
        android:elevation="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/healthtips"
        app:layout_constraintStart_toEndOf="@+id/moodtracker"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="79dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/irish_grover"
        android:text="Mood"
        android:textAlignment="center"
        android:textColor="#123456"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/moodtracker"
        app:layout_constraintStart_toStartOf="@+id/moodtracker"
        app:layout_constraintTop_toBottomOf="@+id/moodtracker" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="129dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/irish_grover"
        android:text="Health Tips"
        android:textAlignment="center"
        android:textColor="#123456"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/healthTip"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="@+id/healthTip"
        app:layout_constraintTop_toBottomOf="@+id/healthTip" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/quiz"
        android:layout_width="79dp"
        android:layout_height="71dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:background="#BC757575"
        android:elevation="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/quiz"
        app:layout_constraintStart_toEndOf="@+id/balanceddiet"
        app:layout_constraintTop_toTopOf="@+id/balanceddiet"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="79dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/irish_grover"
        android:text="Quiz"
        android:textAlignment="center"
        android:textColor="#123456"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/quiz"
        app:layout_constraintStart_toStartOf="@+id/quiz"
        app:layout_constraintTop_toBottomOf="@+id/quiz" />


</androidx.constraintlayout.widget.ConstraintLayout>